@using Harmoni.UI.DTOs
@using Harmoni.UI.DTOs.Speaker
@model SpeakerCreateDTO
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>Base Inputs</h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <svg class="stroke-icon">
                                    <use href="https://admin.pixelstrap.net/riho/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Form Controls</li>
                        <li class="breadcrumb-item active">Base inputs</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Basic form</h4>
                        <p class="f-m-light mt-1">
                            Use the <code>.form-label </code>and <code>.form-control </code>through create basic form.
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="card-wrapper border rounded-3">
                            <form method="post" asp-action="Create" class="row g-3" enctype="multipart/form-data">
                                <div class="col-md-12">
                                    <label class="form-label" asp-for="Name">Name</label>
                                    <input class="form-control" asp-for="Name" placeholder="Eli">
                                    <span class="text-danger" asp-validation-for="Name"></span>

                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" asp-for="Description">Description</label>
                                    <input class="form-control" asp-for="Description" placeholder="Speaker look like Ali">
                                    <span class="text-danger" asp-validation-for="Description"></span>

                                </div>
                                 <div class="col-md-12">
                                    <label class="form-label" asp-for="Experience">Experience</label>
                                    <input class="form-control" asp-for="Experience" placeholder="10">
                                    <span class="text-danger" asp-validation-for="Experience"></span>

                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" asp-for="InstagramUrl">Instagram Url</label>
                                    <input class="form-control" asp-for="InstagramUrl" placeholder="https://www.instagram.com/">
                                    <span class="text-danger" asp-validation-for="InstagramUrl"></span>

                                </div>
                                   <div class="col-md-12">
                                    <label class="form-label" asp-for="XUrl">X Url</label>
                                    <input class="form-control" asp-for="XUrl" placeholder="https://www.twitter.com/">
                                    <span class="text-danger" asp-validation-for="XUrl"></span>

                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" asp-for="FacebookUrl">Facebook Url</label>
                                    <input class="form-control" asp-for="FacebookUrl" placeholder="https://www.facebook.com/">
                                    <span class="text-danger" asp-validation-for="FacebookUrl"></span>

                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" asp-for="TwitchUrl">Twitch Url</label>
                                    <input class="form-control" asp-for="TwitchUrl" placeholder="https://www.twitch.com/">
                                    <span class="text-danger" asp-validation-for="TwitchUrl"></span>

                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" asp-for="FormFile">Image Of Speaker</label>
                                    <input class="form-control" asp-for="FormFile">
                                    <span class="text-danger">@ViewBag.FormMessage</span>
                                </div>
                                <div class="col-12">
                                    <div class="form-check checkbox-checked">
                                        <input class="form-check-input" id="gridCheck1" type="checkbox">
                                        <label class="form-check-label" for="gridCheck1">Check me out</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Create</button>
                                    <a asp-action="Index" class="btn btn-info">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>