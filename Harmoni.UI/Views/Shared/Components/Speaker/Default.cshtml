@using Harmoni.UI.DTOs.Speaker
@model IEnumerable<SpeakerGetDTO>
@{
    ViewData["Title"] = "Default";
}

<!-- speaker-carousel - start -->
<div class="speaker-carousel">
	<div class="slider-for">
		@foreach (var item in Model)
		{
			<div class="item">
				<div class="row">

					<!-- speaker-image - start -->
					<div class="col-lg-6 col-md-12 col-sm-12">
						<div class="speaker-image image-wrapper text-center">
							<img src="~/uploads/speakers/@item.ImageUrl" alt="Image_not_found">
							<span class="speaker-name"><strong>@item.Name</strong></span>
						</div>
					</div>
					<!-- speaker-image - end -->
					<!-- speaker-content - start -->
					<div class="col-lg-6 col-md-12 col-sm-12">
						<div class="speaker-content">

							<!-- section-title - start -->
							<div class="section-title text-left mb-50">
								<span class="line-style"></span>
								<small class="sub-title">harmoni staffs</small>
								<h2 class="big-title">Professional <strong>Speakers</strong></h2>
							</div>
							<!-- section-title - end -->

							<div class="speaker-info">
								<div class="speaker-title mb-30">
									<span class="speaker-name"><strong>@item.Name</strong></span>
									<span class="work-experienc yellow-color"><strong>@item.Experience Years</strong> experienced</span>
								</div>
								<p class="black-color mb-30">
									@item.Description
								</p>
								<div class="speaker-social-network ul-li">
									<h3 class="title title-medium mb-15">
										<strong>Social</strong> Network
									</h3>
									<ul>


										<li>
											@if (item.FacebookUrl is not null)
											{
												<a href="@item.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
											}
										</li>
										<li>
											@if (item.XUrl is not null)
											{
												<a href="@item.XUrl"><i class="fab fa-twitter"></i></a>

											}
										</li>
										<li>
											@if (item.TwitchUrl is not null)
											{
												<a href="@item.TwitchUrl"><i class="fab fa-twitch"></i></a>
											}
										</li>
										<li>
											@if (item.InstagramUrl is not null)
											{
												<a href="@item.InstagramUrl"><i class="fab fa-instagram"></i></a>
											}
										</li>
									</ul>
								</div>
							</div>

						</div>
					</div>
					<!-- speaker-content - end -->

				</div>
			</div>
		}



	</div>

	<div class="slider-nav">
		@foreach (var item in Model)
		{
			<div class="item">
				<div class="item-content">
					<span class="speaker-thumbnail">
						<img src="~/uploads/speakers/@item.ImageUrl" alt="Image_not_found">
					</span>
					<h3 class="speaker-name">@item.Name</h3>
					<span class="sub-title">Harmoni Speaker</span>
				</div>
			</div>

		}

	</div>
</div>
<!-- speaker-carousel - end -->